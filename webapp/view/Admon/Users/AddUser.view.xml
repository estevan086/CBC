<mvc:View
	controllerName="sap.ui.demo.walkthrough.controller.Admon.Users.AddUser"
	xmlns:html="http://www.w3.org/1999/xhtml" 
	xmlns:mvc="sap.ui.core.mvc" 
	displayBlock="true"
	xmlns="sap.ui.table" 
	xmlns:m="sap.m" 
	xmlns:u="sap.ui.unified" 
	xmlns:c="sap.ui.core"
    height="100%"
    xmlns:f="sap.ui.layout.form" >
	<m:App>
		<m:pages>
			<m:Page
			showHeader="false"
			enableScrolling="false"
			class="sapUiContentPadding">
			<m:content>
				<f:SimpleForm 
		    layout="ColumnLayout"
			columnsM="2"
			columnsL="2"
			columnsXL="3">
			<f:content>
					<m:Label text="Team"/>
					<m:Select name="Team">
						<m:items>
							<c:Item text="Team 1" key="0"/>
							<c:Item text="Team 2" key="1"/>
							<c:Item text="Team 3" key="2"/>
						</m:items>
					</m:Select>
					<m:Label text="usuario"/>
					<m:Select name="nameUser">
						<m:items>
							<c:Item text="usuario 1" key="0"/>
							<c:Item text="usuario 2" key="1"/>
							<c:Item text="usuario 3" key="2"/>
						</m:items>
					</m:Select>
					<m:Label text="Sociedad - Centro"/>
					<m:Select name="Type">
						<m:items>
							<c:Item text="Sociedad - Centro 1" key="0"/>
							<c:Item text="Sociedad - Centro 2" key="1"/>
							<c:Item text="Sociedad - Centro 3" key="2"/>
						</m:items>
					</m:Select>
					<m:Label text="Colaborativo"/>
					<m:CheckBox text="" selected="true" />
					<m:Button icon="sap-icon://save"  text="save" tooltip="save"/>
			</f:content>
		</f:SimpleForm>
			<Table id="table1"
				rows="{/ProductCollection}"
				selectionMode="None"
				visibleRowCount="10">
					<toolbar>
					<m:OverflowToolbar>
						<m:content>
							<m:Title id="title" text="Usuarios"/>
							<m:ToolbarSpacer/>
							<m:Button
								icon="sap-icon://add"
								tooltip="add item"
								press="frmLogisticPress"/>
							<m:Button
								icon="sap-icon://sort"
								tooltip="Sort Categories"
								press="sortCategories"/>
							<m:Button
								icon="sap-icon://decline"
								tooltip="Clear all sortings"
								press="clearAllSortings"/>
							<m:SearchField
								placeholder="Filter"
								value="{ui>/globalFilter}"
								search="filterGlobally"
								width="15rem"/>
						</m:content>
					</m:OverflowToolbar>
				</toolbar>
				<columns>
					<Column width="25%">
						<m:Label text="Team" />
						<template>
							<m:Text text="{Name}" wrapping="false" />				
						</template>
					</Column>
					<Column
						id="categories"
						width="25%"
						showSortMenuEntry="false"
						sortProperty="Category">
						<m:Label text="Usuario" />
						<template>
							<m:Text text="{Category}" wrapping="false" />
						</template>
					</Column>
					<Column
						id="quantity"
						width="25%"
						sortProperty="Quantity">
						<m:Label text="Sociedad - Centro" />
						<template>
							<m:Label text="{
								path: 'Quantity',
								type: 'sap.ui.model.type.Integer'
							}" />
						</template>
					</Column>
					<Column width="10%">
						<m:Label text="Colaborativo" />
						<template>
							<m:CheckBox selected="{
								path: 'Heavy',
								type: 'sap.ui.model.type.String'
							}"/>
						</template>
					</Column>
				</columns>
			</Table>
			</m:content>
		</m:Page>
		</m:pages>
		</m:App>
</mvc:View>