<mvc:View controllerName="cbc.co.simulador_costos.controller.Admon.Centros" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns:ui="sap.ui.table" xmlns:m="sap.m" xmlns:u="sap.ui.unified" xmlns:c="sap.ui.core"
	xmlns:l="sap.ui.layout" height="100%">
	<m:ObjectHeader binding="{/ProductCollection/0}" title="Administracion - Centros" condensed="true"
		number="{ parts:[{path:'Price'},{path:'CurrencyCode'}], type: 'sap.ui.model.type.Currency', formatOptions: {showMeasure: false} }"
		numberUnit="{CurrencyCode}"></m:ObjectHeader>
	<m:Page showHeader="false" enableScrolling="false" class="sapUiContentPadding">
		<m:content>
			<ui:Table id="tblCentros" rows="{Centros>/CodCentros}" selectionMode="None" visibleRowCount="10" rowActionCount="1" class="sapUiSizeCompact">
				<ui:extension>
					<m:OverflowToolbar>
						<m:content>
							<m:Label text="Sociedad"/>
							<m:ComboBox id="idComboBoxSociedad" selectionChange="onChangeSociedad" showSecondaryValues="true" filterSecondaryValues="true"  
								items="{ path: '/LstSociedades', sorter: { path: 'CompCodePlant' } }">
								<c:ListItem key="{CompCodePlant}" text="{DescCompCodePlant}" additionalText="{CompCodePlant}"/>
							</m:ComboBox>
							<m:ToolbarSpacer/>
							<m:Button icon="sap-icon://save" type="Emphasized" text="{i18n>Guardar}" tooltip="Crear Centros"/>
						</m:content>
					</m:OverflowToolbar>
				</ui:extension>
				<ui:columns>
					<ui:Column filterProperty="PlantDesc">
						<m:Label text="Centro"/>
						<ui:template>
							<m:Text id="txtCentro" text="{Centros>/PlantDesc}" wrapping="false"/>
						</ui:template>
					</ui:Column>
					<ui:Column filterProperty="Period">
						<Label text="Mes"/>
						<ui:template>
							<Text text="{Periodos>Period}" wrapping="false"/>
						</ui:template>
					</ui:Column>
					<ui:Column filterProperty="Flag">
						<m:Label text="Activo"/>
						<ui:template>
							<m:Text id="txtCentro2" text="{Centros>/Flag}" wrapping="false"/>
							<!--<m:CheckBox id="chkStatus"  text="{Centros>/Flag}" />-->
						</ui:template>
					</ui:Column>
				</ui:columns>
			</ui:Table>
		</m:content>
	</m:Page>
</mvc:View>