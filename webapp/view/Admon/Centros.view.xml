<mvc:View controllerName="cbc.co.simulador_costos.controller.Admon.Centros" xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:ui="sap.ui.table" height="100%">
	<ObjectHeader binding="{/ProductCollection/0}" title="Centros" condensed="true"
		number="{ parts:[{path:'Price'},{path:'CurrencyCode'}], type: 'sap.ui.model.type.Currency', formatOptions: {showMeasure: false} }"
		numberUnit="{CurrencyCode}"/>
	<Page showHeader="false" enableScrolling="false" class="sapUiContentPadding" busy="{modelView>/busy}">
		<content>
			<ui:Table id="tblCentros" rows="{Centros>/CodCentros}" selectionMode="None" visibleRowCount="10" rowActionCount="1" class="sapUiSizeCompact">
				<ui:extension>
					<OverflowToolbar>
						<content>
						<Label text="Sociedad"/>
							<ComboBox id="idComboBoxSociedad" selectionChange="onChangeSociedad" showSecondaryValues="true" filterSecondaryValues="true"  
								items="{ path: '/LstSociedades', sorter: { path: 'CompCodePlant' } }">
								<core:ListItem key="{CompCodePlant}" text="{DescCompCodePlant}" additionalText="{CompCodePlant}"/>
							</ComboBox>
							<ToolbarSpacer/>
							<Button icon="sap-icon://save" type="Emphasized" text="{i18n>Guardar}" tooltip="Crear Centros" press="UpdateCentros"/>
						</content>
					</OverflowToolbar>
				</ui:extension>
				<ui:columns>
					<ui:Column filterProperty="PlantDesc">
						<Label text="Centro"/>
						<ui:template>
							<Text text="{Centros>PlantDesc}" wrapping="false"/>
						</ui:template>
					</ui:Column>
					<ui:Column filterProperty="Flag">
						<Label text="Descripcion"/>
						<ui:template>
							<CheckBox id="chxStatusCentro" selected="{Centros>Flag}" wrapping="false"/>
						</ui:template>
					</ui:Column>
					<ui:Column width="1rem" id="hideColumn" filterProperty="Flag">
						<Label text=""/>
						<ui:template>
								<Text text="{Centros>oRow}" wrapping="false"/>
						</ui:template>
					</ui:Column>
				</ui:columns>
			</ui:Table>
		</content>
	</Page>
</mvc:View>