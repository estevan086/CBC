<mvc:View
	controllerName="cbc.co.simulador_costos.controller.Admon.CreateParameters.MasterSap"
	xmlns:html="http://www.w3.org/1999/xhtml" 
	xmlns:mvc="sap.ui.core.mvc" 
	displayBlock="true"
	xmlns="sap.ui.table" 
	xmlns:m="sap.m" 
	xmlns:u="sap.ui.unified" 
	xmlns:c="sap.ui.core"
	xmlns:l="sap.ui.layout"
    height="100%">
	 <m:App>
	   <m:pages>
		<m:Page
			showHeader="false"
			enableScrolling="false"
			class="sapUiContentPadding">
			<m:content>
			<m:Label text="Pais" width="100%" labelFor="cbxPais"/>
			<m:ComboBox
				showSecondaryValues= "true"
				items="{
					path: '/CENTRO',
					sorter: { path: 'text' }
				}">
				<c:ListItem key="{COD PAIS}" text="{PAIS}" additionalText = "{COD PAIS}"/>
			</m:ComboBox>
			<m:Label text="Centros" width="100%" labelFor="multiInput"/>
			<m:MultiInput width="40%"
				id="multiInput"
				suggestionItems="{
					path: '/CENTRO',
					sorter: { path: 'CENTRO' }
				}"
				valueHelpRequest="handleValueHelp">
				<c:Item key="{Ce.}" text="{CENTRO}" />
			</m:MultiInput>	
			<l:VerticalLayout
				class="sapUiContentPadding"
				width="100%">
				</l:VerticalLayout>
				<Table id="tblMasterSap"
					rows="{/CENTRO}"
					selectionMode="MultiToggle"
					visibleRowCount="12">
					<toolbar>
						<m:OverflowToolbar>
							<m:content>
								<m:Title id="title" text="Datos SAP" />
								<m:ToolbarSpacer/>
								<m:Button
									icon="sap-icon://sort"
									tooltip="Sort Categories"
									press="sortCategories"/>
								<m:Button
									icon="sap-icon://decline"
									tooltip="Clear all sortings"
									press="clearAllSortings"/>
								<m:SearchField
									placeholder="Filter"
									value="{ui>/globalFilter}"
									search="filterGlobally"
									width="15rem"/>
									<m:Button	icon="sap-icon://download" press="onDataExport" />
							</m:content>
						</m:OverflowToolbar>
					</toolbar>
					<columns>
						<Column width="11rem">
							<m:Label text="Cod. Centro" />
							<template>
								<m:Text text="{Ce.}" wrapping="false" />
							</template>
						</Column>
						<Column width="11rem">
							<m:Label text="Centro" />
							<template>
								<m:Text text="{CENTRO}" wrapping="false" />
							</template>
						</Column>
						<Column width="11rem">
							<m:Label text="Nombre" />
							<template>
								<m:Text text="{Nombre 2}" wrapping="false" />
							</template>
						</Column>
						<Column width="11rem">
							<m:Label text="Cod. Pais" />
							<template>
								<m:Text text="{COD PAIS}" wrapping="false" />
							</template>
						</Column>
						<Column width="11rem">
							<m:Label text="Pais" />
							<template>
								<m:Text text="{PAIS}" wrapping="false" />
							</template>
						</Column>
						<Column width="11rem">
							<m:Label text="Cod. Sociedad" />
							<template>
								<m:Text text="{SOCIEDAD}" wrapping="false" />
							</template>
						</Column></columns>
				</Table>
			</m:content>
		</m:Page>
	  </m:pages>
	 </m:App>
</mvc:View>