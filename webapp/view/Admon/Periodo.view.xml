<mvc:View controllerName="cbc.co.simulador_costos.controller.Admon.Periodo" xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:ui="sap.ui.table" height="100%">
	<ObjectHeader binding="{/ProductCollection/0}" title="{i18n>Periodos}" condensed="true"
		number="{ parts:[{path:'Price'},{path:'CurrencyCode'}], type: 'sap.ui.model.type.Currency', formatOptions: {showMeasure: false} }"
		numberUnit="{CurrencyCode}"/>
	<Page showHeader="false" enableScrolling="false" class="sapUiContentPadding">
		<content>
			<ui:Table id="tblLogisticcCost" rows="{LogisticCost>/CodLogisticCost}" selectionMode="None" visibleRowCount="10" rowActionCount="1"
				class="sapUiSizeCompact">
				<ui:extension>
					<OverflowToolbar>
						<content>
							<!--<Title id="title" text="{i18n>Periodos}"/>-->
							<ToolbarSpacer/>
							<MaskInput id="txtDate" mask="9999" placeholderSymbol="_" placeholder="Agregar Periodo"/>
							<Button icon="sap-icon://calendar" type="Emphasized" text="{i18n>Crear}" tooltip="Crear Periodo"/>
						</content>
					</OverflowToolbar>
				</ui:extension>
				<ui:columns>
					<ui:Column>
						<Label text="AÃ±o"/>
						<ui:template>
							<Text text="{Periodo}" wrapping="false"/>
						</ui:template>
					</ui:Column>
					<ui:Column>
						<Label text="Mes"/>
						<ui:template>
							<Text text="{Mes}" wrapping="false"/>
						</ui:template>
					</ui:Column>
				</ui:columns>
			</ui:Table>
		</content>
	</Page>
</mvc:View>