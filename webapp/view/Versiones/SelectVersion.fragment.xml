<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:f="sap.ui.layout.form" xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<Dialog title="{versionModel>/title}">
		<content>
			<f:Form editable="true">
				<f:layout>
					<f:ResponsiveGridLayout/>
				</f:layout>
				<f:formContainers>
					<f:FormContainer>
						<f:formElements>
							<f:FormElement label="{i18n>optionLabelVersionFragment}">
								<f:fields>
									<RadioButtonGroup id="rbtnOption" columns="2" selectedIndex="{versionModel>/version/indexOption}" select="onSelectOption">
										<buttons>
											<RadioButton text="{i18n>Edit}"/>
											<RadioButton text="{i18n>Crear}"/>
										</buttons>
									</RadioButtonGroup>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="{i18n>selectVersionFragment}" visible="{= ${versionModel>/version/indexOption} === 0}">
								<f:fields>
									<Input id="inpVersionForEdit" showSuggestion="true" showValueHelp="true" value="{versionModel>/version/versionForEdit}" required="true"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="{i18n>countryVersionFragment}" visible="{= ${versionModel>/version/indexOption} === 1}">
								<f:fields>
									<ComboBox items="{ModelSimulador>/paisesSet}" selectedKey="{versionModel>/version/country}">
										<core:Item key="{ModelSimulador>Pais}" text="{ModelSimulador>Descripcion}" />
									</ComboBox>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="{i18n>nameVersionFragment}" visible="{= ${versionModel>/version/indexOption} === 1}">
								<f:fields>
									<Input value="{versionModel>/version/nameVersion}" required="true"/>
								</f:fields>
							</f:FormElement>
							<!--<f:FormElement label="{i18n>idVersionFragment}" visible="{= ${versionModel>/version/indexOption} === 1}">
								<f:fields>
									<Input value="{versionModel>/version/nameVersion}_{versionModel>/version/modulo}" enabled="false"/>
								</f:fields>
							</f:FormElement>-->
							<f:FormElement label="{i18n>descriptionVersionFragment}" visible="{= ${versionModel>/version/indexOption} === 1}">
								<f:fields>
									<Input value="{versionModel>/version/descriptionVersion}" required="true"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="{i18n>materialsVersionFragment}" visible="{= ${versionModel>/version/indexOption} === 1}">
								<f:fields>
									<Input id="inpMaterialsVersion" showSuggestion="true" showValueHelp="true" description="{versionModel>/version/materialsVersionDesc}" value="{versionModel>/version/materialsVersion}" required="true" app:filter="MAT"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="{i18n>originVersionFragment}" visible="{= ${versionModel>/version/indexOption} === 1}">
								<f:fields>
									<Input id="inpOriginVersion" showSuggestion="true" showValueHelp="true" description="{versionModel>/version/logisticsOriginDesc}" value="{versionModel>/version/logisticsOrigin}" app:filter="LOG"/>
								</f:fields>
							</f:FormElement>
						</f:formElements>
					</f:FormContainer>
				</f:formContainers>
			</f:Form>
		</content>
		<buttons>
			<Button id="btnCreateVersion" text="Crear versión" visible="{= ${versionModel>/version/indexOption} === 1}" type="Accept"/>
			<Button text="Editar versión" visible="{= ${versionModel>/version/indexOption} === 0}" type="Accept" press="onEditVersion"/>
			<Button text="Cancelar" press="onNavBack"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>