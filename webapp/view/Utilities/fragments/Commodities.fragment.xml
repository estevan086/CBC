<core:FragmentDefinition 
	xmlns="sap.m"
	xmlns:f="sap.ui.layout.form" 
	xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:html="http://www.w3.org/1999/xhtml" 
	xmlns:l="sap.ui.layout">

	<Dialog title="crear commoditie" >
		<VBox class="sapUiSmallMargin">
		<f:SimpleForm 
			columnsM="2"
			columnsL="3"
			columnsXL="4">
			<f:content>
				<f:FormContainer>
					<f:formElements>
							<f:FormElement label="Sociedad">
							<f:fields>
								<Select name="dllSociedad">
									<items>
										<core:Item text="Sociedad 1" key="0"/>
										<core:Item text="Sociedad 2" key="1"/>
										<core:Item text="Sociedad 3" key="2"/>
									</items>
								</Select>
							</f:fields>
						</f:FormElement>
							<f:FormElement label="Centro">
							<f:fields>
								<Select name="dllCentro">
									<items>
										<core:Item text="Centro 1" key="0"/>
										<core:Item text="Centro 2" key="1"/>
										<core:Item text="Centro 3" key="2"/>
									</items>
								</Select>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Moneda">
							<f:fields>
								<Select name="ddlMoneda">
									<items>
										<core:Item text="Moneda 1" key="0"/>
										<core:Item text="Moneda 2" key="1"/>
										<core:Item text="Moneda 3" key="2"/>
									</items>
								</Select>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="UMD">
							<f:fields>
								<Select name="ddlUMD">
									<items>
										<core:Item text="UMD 1" key="0"/>
										<core:Item text="UMD 2" key="1"/>
										<core:Item text="UMD 3" key="2"/>
									</items>
								</Select>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Precio">
							<f:fields>
								<Input  name="txtPrecio"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Otros Costos">
							<f:fields>
								<Select name="ddlOtrosCostos">
									<items>
										<core:Item text="Costo 1" key="0"/>
										<core:Item text="Costo 2" key="1"/>
										<core:Item text="Costo 3" key="2"/>
									</items>
								</Select>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Formula">
							<f:fields>
								<TextArea name="txtFormula"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Año">
							<f:fields>
								<Select name="Año">
									<items>
										<core:Item text="2019" key="0"/>
										<core:Item text="2020" key="1"/>
										<core:Item text="2021" key="2"/>
									</items>
								</Select>
							</f:fields>
						</f:FormElement>
							<f:FormElement label="Mes">
							<f:fields>
								<Select name="Mes">
									<items>
										<core:Item text="1" key="0"/>
										<core:Item text="2" key="1"/>
										<core:Item text="3" key="2"/>
										<core:Item text="4" key="3"/>
										<core:Item text="5" key="4"/>
										<core:Item text="6" key="5"/>
										<core:Item text="7" key="6"/>
										<core:Item text="8" key="7"/>
										<core:Item text="9" key="8"/>
										<core:Item text="10" key="9"/>
										<core:Item text="11" key="10"/>
										<core:Item text="12" key="11"/>
									</items>
								</Select>
							</f:fields>
						</f:FormElement>
					</f:formElements>
				</f:FormContainer>
			</f:content>
		</f:SimpleForm>
	</VBox>
	<beginButton>
         <Button icon="sap-icon://save"  text="save" tooltip="save" press="closeDialog"/>
    </beginButton>
	<endButton>
         <Button icon="sap-icon://decline" text="cancel" tooltip="cancel"  press="closeDialog"/>
    </endButton>
	</Dialog>
</core:FragmentDefinition>