<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core" >
   <Dialog
      id="helloDialog"
      title ="{i18n>helloPanelTitle}">
      <content>
         <FormattedText
            htmlText="{i18n>openDialogButtonText}"
            class="sapUiSmallMargin sapThemeHighlight-asColor myCustomText"/>
      </content>
      <beginButton>
         <Button
            text="{i18n>dialogCloseButtonText}"
            press=".onCloseDialog"/>
      </beginButton>
   </Dialog>
</core:FragmentDefinition>