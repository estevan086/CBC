<mvc:View
	controllerName="cbc.co.simulador_costos.controller.DataDefault.Icoterm.GridIcoterm"
	xmlns:html="http://www.w3.org/1999/xhtml" 
	xmlns:mvc="sap.ui.core.mvc" 
	displayBlock="true"
	xmlns="sap.ui.table" 
	xmlns:m="sap.m" 
	xmlns:u="sap.ui.unified" 
	xmlns:c="sap.ui.core"
    height="100%">
	 <m:App>
	   <m:pages>
		<m:Page
			showHeader="false"
			enableScrolling="false"
			class="sapUiContentPadding">
			<m:content>
				<Table id="tblIcoterm"
					rows="{/ICOTERM}"
					selectionMode="MultiToggle"
					visibleRowCount="12">
						<toolbar>
						<m:OverflowToolbar>
							<m:content>
								<m:Title id="title" text="Icoterm" />
								<m:ToolbarSpacer/>
									<m:Button
								icon="sap-icon://add"
								tooltip="add item"
								press="frmLogisticPress"/>
								<m:Button
									icon="sap-icon://sort"
									tooltip="Sort Categories"
									press="sortCategories"/>
								<m:Button
									icon="sap-icon://decline"
									tooltip="Clear all sortings"
									press="clearAllSortings"/>
								<m:SearchField
									placeholder="Filter"
									value="{ui>/globalFilter}"
									search="filterGlobally"
									width="15rem"/>
							</m:content>
						</m:OverflowToolbar>
					</toolbar>
					<columns>
						<Column width="15%">
							<m:Label text="ID" />
							<template>
								<m:Text text="{ID}" wrapping="false" />
							</template>
						</Column>
						<Column
							id="ColumnICOTERM"
							width="15%"
							showSortMenuEntry="false"
							sortProperty="ICOTERM">
							<m:Label text="DescripciÃ³n" />
							<template>
								<m:Text text="{ICOTERM}" wrapping="false" />
							</template>
						</Column>
					</columns>
				</Table>
			</m:content>
		</m:Page>
	  </m:pages>
	 </m:App>
</mvc:View>