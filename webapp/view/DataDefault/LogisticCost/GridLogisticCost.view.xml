<mvc:View xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.ui.table" xmlns:m="sap.m" xmlns:u="sap.ui.unified" xmlns:c="sap.ui.core" controllerName="cbc.co.simulador_costos.controller.DataDefault.LogisticCost.GridLogisticCost" displayBlock="true" height="100%">
	<m:ObjectHeader binding="{/ProductCollection/0}" title="{i18n>CostosLogisticos}" condensed="true" number="{ parts:[{path:'Price'},{path:'CurrencyCode'}], type: 'sap.ui.model.type.Currency', formatOptions: {showMeasure: false} }" numberUnit="{CurrencyCode}"/>
	<m:App>
		<m:pages>
			<m:Page showHeader="false" enableScrolling="false" class="sapUiContentPadding">
				<m:content>
					<m:FlexBox height="auto" alignItems="Start" justifyContent="Start">
						<m:items>
							<m:Button icon="sap-icon://copy" text="{i18n>Copiar}" tooltip="{i18n>Copiar}" press="showFormCopyVersionCommoditie"/>
							<m:Button icon="sap-icon://save" text="{i18n>Guardar}" tooltip="{i18n>Guardar}" press="saveVersionCommodities"/>
							<m:Button icon="sap-icon://upload-to-cloud" text="{i18n>Publicar}" tooltip="{i18n>Publicar}" press="PublicVersionCommodities"/>
						</m:items>
					</m:FlexBox>
					<Table id="tblLogicCost" selectionMode="None" visibleRowCount="10">
						<extension>
							<m:OverflowToolbar>
								<m:content>
									<m:ToolbarSpacer/>
									<m:Button icon="sap-icon://sys-next-page" text="{i18n>Exportar}" tooltip="{i18n>Exportar}"/>
									<m:Button icon="sap-icon://sys-prev-page" text="{i18n>Importar}" tooltip="{i18n>Importar}"/>
									<m:Button icon="sap-icon://factory" type="Emphasized" text="{i18n>Administrar}" tooltip="{i18n>Administrar}" press="onGotoadminlc"/>
									<m:Button icon="sap-icon://list" type="Emphasized" text="{i18n>NuevoMaterial}" tooltip="{i18n>NuevoMaterial}" press="onGotoaddmaterial"/>
								</m:content>
							</m:OverflowToolbar>
						</extension>
						<columns>
							<Column>
								<m:Label text="ID Material"/>
								<template>
									<m:Text text="{Name}" wrapping="false"/>
								</template>
							</Column>
							<Column id="categories" showSortMenuEntry="false" sortProperty="Category">
								<m:Label text="Material"/>
								<template>
									<m:Text text="{Category}" wrapping="false"/>
								</template>
							</Column>
							<Column id="quantity" sortProperty="Quantity">
								<m:Label text="Centro"/>
								<template>
									<m:Label text="{ path: 'Quantity', type: 'sap.ui.model.type.Integer' }"/>
								</template>
							</Column>
							<Column>
								<m:Label text="ID Icoterm"/>
								<template>
									<m:Label text="{Quantity}"/>
								</template>
							</Column>
							<Column>
								<m:Label text="Und. Medida"/>
								<template>
									<m:ObjectStatus text="{Status}" state="{ path: 'Available', formatter: '.formatAvailableToObjectState' }"/>
								</template>
							</Column>
							<Column>
								<m:Label text="Cant. Estandar"/>
								<template>
									<u:Currency value="{Price}" currency="{CurrencyCode}"/>
								</template>
							</Column>
							<Column>
								<m:Label text="Moneda"/>
								<template>
									<u:Currency value="{Price}" currency="{CurrencyCode}"/>
								</template>
							</Column>
							<Column>
								<m:Label text="AÃ±o"/>
								<template>
									<u:Currency value="{Price}" currency="{CurrencyCode}"/>
								</template>
							</Column>
							<Column>
								<m:Label text="Mes"/>
								<template>
									<u:Currency value="{Price}" currency="{CurrencyCode}"/>
								</template>
							</Column>
							<Column>
								<m:Label text="Costo 1"/>
								<template>
									<u:Currency value="{Price}" currency="{CurrencyCode}"/>
								</template>
							</Column>
							<Column>
								<m:Label text="Costo 2 "/>
								<template>
									<u:Currency value="{Price}" currency="{CurrencyCode}"/>
								</template>
							</Column>
							<Column>
								<m:Label text="Total Costo"/>
								<template>
									<u:Currency value="{Price}" currency="{CurrencyCode}"/>
								</template>
							</Column>
							<Column>
								<m:Label text="Costo Und"/>
								<template>
									<u:Currency value="{Price}" currency="{CurrencyCode}"/>
								</template>
							</Column>
						</columns>
					</Table>
				</m:content>
			</m:Page>
		</m:pages>
	</m:App>
</mvc:View>