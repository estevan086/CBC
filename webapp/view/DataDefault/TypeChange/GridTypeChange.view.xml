<mvc:View controllerName="cbc.co.simulador_costos.controller.DataDefault.TypeChange.GridTypeChange"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.ui.table" xmlns:m="sap.m"
	xmlns:u="sap.ui.unified" xmlns:c="sap.ui.core" height="100%">
	<m:ObjectHeader binding="{/ProductCollection/0}" title="Datos Default - Tipo de Cambio" condensed="true"
		number="{ parts:[{path:'Price'},{path:'CurrencyCode'}], type: 'sap.ui.model.type.Currency', formatOptions: {showMeasure: false} }"
		numberUnit="{CurrencyCode}">
		<m:ObjectAttribute text="{WeightMeasure} {WeightUnit} {Width} x {Depth} x {Height} {DimUnit}"/>
	</m:ObjectHeader>
	<m:App>
		<m:pages>
			<m:Page showHeader="false" enableScrolling="false" class="sapUiContentPadding">
				<m:content>
					<!--<m:FlexBox height="auto" alignItems="Start" justifyContent="Start">
						<m:items>
							<m:Button icon="sap-icon://copy" text="Copiar" tooltip="Copiar version de commoditie" press="showFormCopyVersionCommoditie"/>
							<m:Button icon="sap-icon://save" text="Guardar" tooltip="Guardar version de commoditie" press="saveVersionCommodities"/>
							<m:Button icon="sap-icon://upload-to-cloud" text="Publicar" tooltip="Publicar version de commoditie" press="PublicVersionCommodities"/>
						</m:items>
					</m:FlexBox>-->
					<Table id="tblTasaCambio" rows="{/TASACAMBIO}" selectionMode="None" visibleRowCount="10" rowActionCount="1" class="sapUiSizeCompact">
						<extension>
							<m:OverflowToolbar>
								<m:content>
									<m:Title id="title" text="Tipos de Cambio"/>
									<m:ToolbarSpacer/>
									<m:Button icon="sap-icon://sys-next-page" text="Exportar" tooltip="Exportar version de commoditie"/>
									<m:Button icon="sap-icon://sys-prev-page" text="Importar" tooltip="Importar version de commoditie"/>
									<m:Button icon="sap-icon://paid-leave" text="Crear Tipo de Cambio" tooltip="Crear Tipo de Cambio" press="showFormAddCommoditie"/>
									<m:Button icon="sap-icon://save" text="Guardar" tooltip="Guardar" press="saveVersionCommodities"/>
								</m:content>
							</m:OverflowToolbar>
						</extension>
						<columns>
							<Column width="11rem">
								<m:Label text="Tipo"/>
								<template>
									<m:Text text="{TIPO}" wrapping="false"/>
								</template>
							</Column>
							<Column id="categories" width="11rem" showSortMenuEntry="false" sortProperty="PAIS">
								<m:Label text="Pais"/>
								<template>
									<m:Text text="{PAIS}" wrapping="false"/>
								</template>
							</Column>
							<Column id="quantity" width="6rem" sortProperty="Quantity">
								<m:Label text="Año"/>
								<template>
									<m:Label text="{AÑO}"/>
								</template>
							</Column>
							<Column width="6rem">
								<m:Label text="Mes"/>
								<template>
									<m:Text text="{MES}" wrapping="false"/>
								</template>
							</Column>
							<Column width="11rem">
								<m:Label text="Valor"/>
								<template>
									<m:Label text="{VALOR}"/>
								</template>
							</Column>
							<Column width="6rem">
								<m:Label text="Moneda Local"/>
								<template>
									<m:Label text="{MONEDA LOCAL}"/>
								</template>
							</Column>
							<Column width="6rem">
								<m:Label text="Moneda Conversión"/>
								<template>
									<m:Label text="{MONEDA CONVERSIÓN}"/>
								</template>
							</Column>
							<Column width="11rem">
								<m:Label text="Valor/Conversión"/>
								<template>
									<m:Label text=""/>
								</template>
							</Column>
						</columns>
					</Table>
				</m:content>
			</m:Page>
		</m:pages>
	</m:App>
</mvc:View>