<mvc:View
	controllerName="sap.ui.demo.walkthrough.controller.COGS.GridCOGS"
	xmlns:html="http://www.w3.org/1999/xhtml" 
	xmlns:mvc="sap.ui.core.mvc" 
	displayBlock="true"
	xmlns="sap.ui.table" 
	xmlns:m="sap.m" 
	xmlns:u="sap.ui.unified" 
	xmlns:c="sap.ui.core"
    height="100%">
	 <m:App>
	   <m:pages>
		<m:Page
			showHeader="false"
			enableScrolling="false"
			class="sapUiContentPadding">
			<m:content>
				<Table id="tblMasterSap"
					rows="{/ProductCollection}"
					selectionMode="Single"
					visibleRowCount="12">
						<toolbar>
						<m:OverflowToolbar>
							<m:content>
								<m:Title id="title" text="COGS" />
								<m:ToolbarSpacer/>
								<m:Button
									icon="sap-icon://sort"
									tooltip="Sort Categories"
									press="sortCategories"/>
								<m:Button
									icon="sap-icon://decline"
									tooltip="Clear all sortings"
									press="clearAllSortings"/>
								<m:SearchField
									placeholder="Filter"
									value="{ui>/globalFilter}"
									search="filterGlobally"
									width="15rem"/>
							</m:content>
						</m:OverflowToolbar>
					</toolbar>
					<columns>
						<Column width="11rem">
							<m:Label text="Pais" />
							<template>
								<m:Text text="{Name}" wrapping="false" />
							</template>
						</Column>
						<Column
							id="categories"
							width="11rem"
							showSortMenuEntry="false"
							sortProperty="Category">
							<m:Label text="Sociedad-Centro" />
							<template>
								<m:Text text="{Category}" wrapping="false" />
							</template>
						</Column>
							<Column
							id="quantity"
							width="6rem"
							hAlign="End"
							sortProperty="Quantity">
							<m:Label text="Moneda" />
							<template>
								<m:Label text="{
									path: 'Quantity',
									type: 'sap.ui.model.type.Integer'
								}" />
							</template>
						</Column>
						<Column width="11rem">
							<m:Label text="Unidad Medida" />
							<template>
								<m:Text text="{ProductId}" wrapping="false" />
							</template>
						</Column>
					</columns>
				</Table>
			</m:content>
		</m:Page>
	  </m:pages>
	 </m:App>
</mvc:View>