<mvc:View controllerName="cbc.co.simulador_costos.controller.Escenarios.MatrizEsc" height="100%" xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns="sap.m">
	<Page title="Matriz Escenarios">
		<content>
			<Table id="tblProfiles" noDataText="{i18n>profilesNoDataFound}" busyIndicatorDelay="{viewModel>/delay}" growing="true" growingThreshold="30"
				updateFinished=".onUpdateFinished" items="{ModelSimulador>/perfilesSet}">
				<headerToolbar>
					<OverflowToolbar>
						<content>
							<Title text="Escenarios"/>
						</content>
					</OverflowToolbar>
				</headerToolbar>
				<items>
					<ColumnListItem type="Navigation">
						<cells>
							<Text text="{ModelSimulador>IdProfile}"/>
							<Text text="Row 1 Cell 2" id="text1"/>
							<Text text="Row 1 Cell 3" id="text2"/></cells>
					</ColumnListItem>
				</items>
				<columns>
					<Column>
						<header>
							<Label text="{i18n>profilesProfileHeader}"/>
						</header>
					</Column>
					<Column>
						<header>
							<Label text="{i18n>profilesModuleHeader}"/>
						</header>
					</Column>
					<Column>
						<header>
							<Label text="{i18n>profilesSubmoduleHeader}"/>
						</header>
					</Column>
				</columns>
			</Table>
		</content>
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button type="Accept" text="{i18n>Crear}" icon="sap-icon://add" tooltip="Crear nuevo escenario" press="onAddScene"/>
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>