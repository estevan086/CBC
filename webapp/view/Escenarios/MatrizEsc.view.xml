<mvc:View controllerName="cbc.co.simulador_costos.controller.Escenarios.MatrizEsc" height="100%" xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns="sap.m">
	<Page title="{i18n>titleScenarioView}">
		<content>
			<Table id="tblScenarios" noDataText="{i18n>scenarioNoDataFound}" busyIndicatorDelay="{viewModel>/delay}" growing="true" growingThreshold="30"
				updateFinished=".onUpdateFinished" items="{ModelSimulador>/escenarioSet}">
				<headerToolbar>
					<OverflowToolbar>
						<content>
							<Title text="{viewModel>/tableTitle}"/>
						</content>
					</OverflowToolbar>
				</headerToolbar>
				<items>
					<ColumnListItem type="Navigation">
						<cells>
							<Text text="{ModelSimulador>yescenari}"/>
							<Text text="{ModelSimulador>ytipoescn}"/>
						</cells>
					</ColumnListItem>
				</items>
				<columns>
					<Column>
						<header>
							<Label text="{i18n>scenarioNameScenarioView}"/>
						</header>
					</Column>
					<Column>
						<header>
							<Label text="{i18n>scenarioTypeScenarioView}"/>
						</header>
					</Column>
				</columns>
			</Table>
		</content>
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button type="Accept" text="{i18n>Crear}" icon="sap-icon://add" tooltip="{i18n>createScenario}" press="onAddScene"/>
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>