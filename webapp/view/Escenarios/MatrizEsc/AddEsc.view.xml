<mvc:View controllerName="cbc.co.simulador_costos.controller.Escenarios.MatrizEsc.AddEsc" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:f="sap.ui.layout.form" xmlns:t="sap.ui.table">
	<Page title="{viewModel>/titleCreateEscenarioView}" busy="{viewModel>/busy}">
		<content>
			<f:Form editable="true">
				<f:formContainers>
					<f:FormContainer title="Crear escenario">
						<f:formElements>
							<f:FormElement label="Nombre Escenario">
								<f:fields>
									<Input required="true" value="{viewModel>/scenarioName}" maxLength="30"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="DescripciÃ³n Escenario">
								<f:fields>
									<TextArea rows="2" value="{viewModel>/scenarioDesc}" maxLength="40"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement>
								<f:label>
									<Label text="Tipo" required="true"/>
								</f:label>
								<f:fields>
									<Select id="slcScenarioType" items="{Escenarios>/Tipos}">
										<core:Item key="{Escenarios>key}" text="{Escenarios>value}"/>
									</Select>
								</f:fields>
							</f:FormElement>
						</f:formElements>
					</f:FormContainer>
				</f:formContainers>
				<f:layout>
					<f:ResponsiveGridLayout/>
				</f:layout>
			</f:Form>
			<Panel>
				<content>
					<t:Table id="tblMatrixScene" rows="{viewModel>/rows}" selectionMode="None" visibleRowCount="3">
						<t:extension>
							<OverflowToolbar>
								<Title text="Matriz de escenarios"/>
							</OverflowToolbar>
						</t:extension>
					</t:Table>
				</content>
			</Panel>
		</content>
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button type="Accept" text="Validar escenario" icon="sap-icon://add" tooltip="Validar escenario" press="onValidateScene"/>
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>