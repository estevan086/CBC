<mvc:View xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:f="sap.ui.layout.form" xmlns:t="sap.ui.table" controllerName="cbc.co.simulador_costos.controller.Escenarios.MatrizEsc.AddEsc">
	<Page title="{viewModel>/title}" busy="{viewModel>/busy}" navButtonPress="onNavBack" showNavButton="true">
		<content>
			<f:Form editable="true">
				<f:formContainers>
					<f:FormContainer title="Crear escenario">
						<f:formElements>
							<f:FormElement label="Nombre Escenario">
								<f:fields>
									<Input required="true" value="{viewModel>/scenarioName}" maxLength="30" enabled="{viewModel>/modeEdit}"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="DescripciÃ³n Escenario">
								<f:fields>
									<TextArea rows="2" value="{viewModel>/scenarioDesc}" maxLength="40" enabled="{viewModel>/modeEdit}"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement>
								<f:label>
									<Label text="Tipo" required="true"/>
								</f:label>
								<f:fields>
									<Select id="slcScenarioType" items="{Escenarios>/Tipos}" enabled="{viewModel>/modeEdit}">
										<core:Item key="{Escenarios>key}" text="{Escenarios>value}"/>
									</Select>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="{i18n>exchangeRateScenario}">
								<f:fields>
									<RadioButtonGroup id="rbtnExchangeRateOption" columns="2" selectedIndex="{viewModel>/indexExchangeRateOption}" select=".onSelectExchangeRate" enabled="{viewModel>/modeEdit}">
										<buttons>
											<RadioButton id="R" text="{i18n>Real}"/>
											<RadioButton id="P" text="{i18n>Plan}"/>
										</buttons>
									</RadioButtonGroup>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="{i18n>annoScenarioView}">
								<f:fields>
									<ComboBox id="cmbAnnoExchangeRate" selectedKey="{viewModel>/year}" required="true" enabled="{viewModel>/modeEdit}">
									</ComboBox>
								</f:fields>
							</f:FormElement>
						</f:formElements>
					</f:FormContainer>
				</f:formContainers>
				<f:layout>
					<f:ResponsiveGridLayout/>
				</f:layout>
			</f:Form>
			<Panel>
				<content>
					<t:Table id="tblMatrixScene" rows="{viewModel>/rows}" selectionMode="None" visibleRowCount="3">
						<t:extension>
							<OverflowToolbar>
								<Title text="Matriz de escenarios"/>
							</OverflowToolbar>
						</t:extension>
					</t:Table>
				</content>
			</Panel>
		</content>
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button type="Accept" text="Validar escenario" icon="sap-icon://add" tooltip="Validar escenario" press="onValidateScene" visible="{= ['C'].includes(${viewModel>/viewMode}) }"/>
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>