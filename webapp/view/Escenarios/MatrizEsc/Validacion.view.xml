<mvc:View
	height="100%"
	controllerName="sap.ui.demo.walkthrough.controller.Escenarios.MatrizEsc.AddEsc"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<l:VerticalLayout
		class="sapUiContentPadding"
		width="100%">
		<Label text="MultiInput" width="100%" labelFor="multiInput"/>
		<MultiInput width="40%"
			id="multiInput"
			suggestionItems="{
				path: '/ProductCollection',
				sorter: { path: 'Name' }
			}"
			valueHelpRequest="handleValueHelp">
			<core:Item key="{ProductId}" text="{Name}" />
		</MultiInput>
		<Label text="ts as tokens" width="100%" labelFor="multiInput2"/>
		<MultiInput width="40%"
			id="multiInput2"
			suggestionItems="{
				path: '/ProductCollection',
				sorter: { path: 'Name' }
			}"
			valueHelpRequest="handleValueHelp">
			<core:Item key="{ProductId}" text="{Name}" />
		</MultiInput>
	</l:VerticalLayout>
</mvc:View>