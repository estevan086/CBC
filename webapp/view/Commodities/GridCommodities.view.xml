<mvc:View
	controllerName="cbc.co.simulador_costos.controller.Commodities.GridCommodities"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.ui.table" xmlns:m="sap.m"
	xmlns:u="sap.ui.unified" xmlns:c="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:tnt="sap.tnt" height="100%">
	<m:ObjectHeader binding="{/ProductCollection/0}" title="Commodities" condensed="true"
		number="{ parts:[{path:'Price'},{path:'CurrencyCode'}], type: 'sap.ui.model.type.Currency', formatOptions: {showMeasure: false} }"
		numberUnit="{CurrencyCode}">
		<m:ObjectAttribute text="{WeightMeasure} {WeightUnit} {Width} x {Depth} x {Height} {DimUnit}"/>
	</m:ObjectHeader>
	<m:App>
		<m:pages>
			<m:Page showHeader="false" enableScrolling="false" class="sapUiContentPadding">
				<m:content>
					<m:FlexBox height="auto" alignItems="Start" justifyContent="Start">
						<m:items>
							<m:Button icon="sap-icon://copy" text="Copiar" tooltip="Copiar version de commoditie" press="showFormCopyVersionCommoditie"/>
							<m:Button icon="sap-icon://save" text="Guardar" tooltip="Guardar version de commoditie" press="saveVersionCommodities"/>
							<m:Button icon="sap-icon://upload-to-cloud" text="Publicar" tooltip="Publicar version de commoditie" press="PublicVersionCommodities"/>
						</m:items>
					</m:FlexBox>
					<Table id="tblCommodities" rows="{/COMMODITIES}" selectionMode="Single" visibleRowCount="7" rowActionCount="1" class="sapUiSizeCompact">
						<extension>
							<m:OverflowToolbar>
								<m:content>
									<m:Title id="title" text="Commodities"/>
									<m:ToolbarSpacer/>
									<m:Button icon="sap-icon://sys-next-page" text="Exportar" tooltip="Exportar version de commoditie"/>
									<u:FileUploader id="fileUploader" name="myFileUpload" icon="sap-icon://sys-prev-page" tooltip="Importar version de commoditie" change="handleUpload"/>
									<m:Button icon="sap-icon://factory" type="Emphasized" text="Administrar Commodities" tooltip="Crear Commodities"
										press="onGoToIdCommoditieTable"/>
									<m:Button icon="sap-icon://product" type="Emphasized" text="Administrar Version" tooltip="Administracion Version" press="showFormEditCommoditie"/>
								</m:content>
							</m:OverflowToolbar>
						</extension>
						<columns>
							<Column>
								<m:Label text="ICDEF_IDCOMMODITIES"/>
								<template>
									<m:Text text="{CDEF_IDCOMMODITIES}" wrapping="false"/>
								</template>
							</Column>
							<Column>
								<m:Label text="CDEF_COMMODITIE"/>
								<template>
									<m:Text text="{CDEF_COMMODITIE}" wrapping="false"/>
								</template>
							</Column>
							<Column>
								<m:Label text="CDEF_SOCIEDAD"/>
								<template>
									<!--<m:TextField text="{CDEF_SOCIEDAD}" editable="false"/>-->
									<m:Input value="{CDEF_SOCIEDAD}" editable="false"/>
									<!--<m:Text text="{CDEF_SOCIEDAD}" editable="false" visible="false"/>-->
								</template>
							</Column>
							<Column>
								<m:Label text="CDEF_MONEDA"/>
								<template>
									<m:Input value="{CDEF_MONEDA}" editable="false"/>
								</template>
							</Column>
							<Column>
								<m:Label text="CDEF_UMD"/>
								<template>
									<m:Input value="{CDEF_UMD}" editable="false"/>
								</template>
							</Column>
							<Column>
								<m:Label text="CDEF_PRECIO"/>
								<template>
									<m:Input value="{CDEF_PRECIO}" editable="false"/>
								</template>
							</Column>
							<Column>
								<m:Label text="CDEF_OTROCOSTO"/>
								<template>
									<m:Input value="{CDEF_OTROCOSTO}" editable="false"/>
								</template>
							</Column>
							<Column width="14rem">
								<m:Label text="CDEF_FORMULA"/>
								<template>
									<m:Text text="{CDEF_FORMULA}" wrapping="true"/>
								</template>
							</Column>
							<Column width="4rem" hAlign="Center">
								<template>
									<m:Button icon="sap-icon://puzzle" press="showCalculator"/>
								</template>
							</Column>
							<Column>
								<m:Label text="CDEF_PERIODO"/>
								<template>
									<m:Text text="{CDEF_PERIODO}" wrapping="false"/>
								</template>
							</Column>
							<Column>
								<m:Label text="CDEF_MES"/>
								<template>
									<m:Text text="{CDEF_MES}" wrapping="false"/>
								</template>
							</Column>
							<Column visible="false">
								<m:Label text="CDEF_EDIT_FLAG"/>
								<template>
									<m:Text text="{CDEF_EDIT_FLAG}" wrapping="false"/>
								</template>
							</Column>
						</columns>
						<rowActionTemplate>
							<RowAction>
								<items>
									<RowActionItem type="Navigation" text="Editar" press="handleEditPress" icon="sap-icon://edit"></RowActionItem>
								</items>
							</RowAction>
						</rowActionTemplate>
						<!--<rowSettingsTemplate>-->
						<!--	<RowSettings highlight="None"/>-->
						<!--</rowSettingsTemplate>-->
					</Table>
				</m:content>
				<m:footer>
					<m:OverflowToolbar>
						<m:Button id="messagePopoverBtn" icon="sap-icon://message-popup" type="Emphasized"
							visible="{=!!${message>/}.length}" press="handleMessagePopoverPress"/>
						<m:ToolbarSpacer/>
						<m:Button type="Emphasized" text="Save" press="_generateInvalidUserInput"/>
						<!--<Button text="Cancel"/>-->
					</m:OverflowToolbar>
				</m:footer>
			</m:Page>
		</m:pages>
	</m:App>
