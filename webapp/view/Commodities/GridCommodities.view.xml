<mvc:View
	controllerName="sap.ui.demo.walkthrough.controller.Commodities.GridCommodities"
	xmlns:html="http://www.w3.org/1999/xhtml" 
	xmlns:mvc="sap.ui.core.mvc" 
	displayBlock="true"
	xmlns="sap.ui.table" 
	xmlns:m="sap.m" 
	xmlns:u="sap.ui.unified" 
	xmlns:c="sap.ui.core"
    height="100%">
	<m:App>
		<m:pages>
			<m:Page
			showHeader="false"
			enableScrolling="false"
			class="sapUiContentPadding">
			<m:content>
			<Table id="tblCommodities"
				rows="{/ProductCollection}"
				selectionMode="None"
				visibleRowCount="10">
					<toolbar>
					<m:OverflowToolbar>
						<m:content>
							<m:Title id="title" text="Commodities" />
							<m:ToolbarSpacer/>
							<m:Button
								icon="sap-icon://add"
								tooltip="add item"
								press="frmLogisticPress"/>
							<m:Button
								icon="sap-icon://sort"
								tooltip="Sort Categories"
								press="sortCategories"/>
							<m:Button
								icon="sap-icon://decline"
								tooltip="Clear all sortings"
								press="clearAllSortings"/>
							<m:SearchField
								placeholder="Filter"
								value="{ui>/globalFilter}"
								search="filterGlobally"
								width="15rem"/>
						</m:content>
					</m:OverflowToolbar>
				</toolbar>
				<columns>
					<Column width="11rem">
						<m:Label text="ID Commoditie" />										
						<template>
							<m:Text text="{Name}" wrapping="false" />
						</template>
					</Column>
					<Column
						id="categoriese"
						showSortMenuEntry="false"
						sortProperty="Category">
						<m:Label text="Sociedad" />
						<template>
							<m:Text text="{Category}" wrapping="false" />
						</template>
					</Column>
					<Column
						id="quantityt"
						sortProperty="Quantity">
						<m:Label text="Centro" />
						<template>
							<m:Label text="{
								path: 'Quantity',
								type: 'sap.ui.model.type.Integer'
							}" />
						</template>
					</Column>
					<Column>
						<m:Label text="Moneda" />
						<template>
							<m:Label text="{Quantity}" />
						</template>
					</Column>
					<Column>
						<m:Label text="UMD" />
						<template>
							<m:ObjectStatus text="{Status}" state="{
								path: 'Available',
								formatter: '.formatAvailableToObjectState'
							}"/>
						</template>
					</Column>
					<Column>
						<m:Label text="Precio" />
						<template>
							<u:Currency value="{Price}" currency="{CurrencyCode}"/>
						</template>
					</Column>
					<Column
						id="quantityw"
						sortProperty="Quantity">
						<m:Label text="Otros Costos" />
						<template>
							<m:Label text="{
								path: 'Quantity',
								type: 'sap.ui.model.type.Integer'
							}" />
						</template>
					</Column>
					<Column
						id="quantityq"
						sortProperty="Quantity">
						<m:Label text="Formula" />
						<template>
							<m:Label text="{
								path: 'Quantity',
								type: 'sap.ui.model.type.Integer'
							}" />
						</template>
					</Column>
					<Column
						id="quantityyy"
						sortProperty="Quantity">
						<m:Label text="AÃ±o" />
						<template>
							<m:Label text="{
								path: 'Quantity',
								type: 'sap.ui.model.type.Integer'
							}" />
						</template>
					</Column>
					<Column
						id="quantityy"
						sortProperty="Quantity">
						<m:Label text="Mes" />
						<template>
							<m:Label text="{
								path: 'Quantity',
								type: 'sap.ui.model.type.Integer'
							}" />
						</template>
					</Column>
				</columns>
			</Table>
			</m:content>
		</m:Page>
		</m:pages>
		</m:App>
</mvc:View>